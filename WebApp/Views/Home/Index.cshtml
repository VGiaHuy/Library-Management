    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">Sách nổi bật</h1>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.5s">

            @foreach (SachDTO item in Model)
            {
                string urlImage = item.UrlImage.Replace("~\\", "/").Replace("\\", "/");

                <div class="testimonial-item bg-light rounded p-3">
                    <div class="bg-white border rounded p-4">
                        @*                         <p>@item.Mota</p>
                    *@                        <div class="d-flex align-items-center">
                            <img class="img-fluid flex-shrink-0 rounded" src="@urlImage" style="width: 150px; height: 200px;">
                            <div class="ps-3">
                                <h4 class="fw-bold mb-1">@item.TenSach </h4>
                                <br />
                                <h6>@item.TacGia</h6>
                            </div>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</div>
<!-- Testimonial End -->

